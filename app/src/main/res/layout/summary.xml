<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firebaseUserManager">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="458dp"
        android:layout_height="764dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.515"
        app:srcCompat="@drawable/plain_background" />


    <TextView
        android:id="@+id/Artiststv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="Top Artists:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.646"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <ListView
        android:id="@+id/artisttopList"
        android:layout_width="191dp"
        android:layout_height="405dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.303">

    </ListView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/wrapNavButton"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginLeft="50px"
        android:background="@drawable/profile_actions_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="wrap" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/homeNavButton"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="36dp"
        android:background="@drawable/profile_actions_background"
        android:text="Home"
        app:layout_constraintStart_toEndOf="@+id/wrapNavButton"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settingsNavButton"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginLeft="50px"
        android:background="@drawable/profile_actions_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeNavButton"
        app:layout_constraintTop_toTopOf="parent"
        android:text="setting"
        />

    <TextView
        android:id="@+id/historyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:text="Top Tracks:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrapNavButton" />

    <ListView
        android:id="@+id/wrapListView"
        android:layout_width="191dp"
        android:layout_height="405dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.303">

    </ListView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrapListView">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/week1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 week" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/month1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 month" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/year1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 year" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/alltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All time" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/generateButton"
        android:layout_width="285dp"
        android:layout_height="67dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:text="generate wrap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.858" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gettoken"
        android:layout_width="236dp"
        android:layout_height="43dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"

        android:text="generate Token"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.155" />

</androidx.constraintlayout.widget.ConstraintLayout>